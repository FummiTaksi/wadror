

<h2>List of ratings</h2>

<td>Number of ratings <%=@ratings.size%></td>
<table class = "table table-hover" >
  <thead>
   <tr>
     <th> Beer</th>
     <th> Score</th>
     <th> User</th>
   </tr>
  </thead>
<tbody>
  <% @ratings.each do |rating| %>
       <tr>
         <td> <%=link_to rating.beer, rating.beer%></td>
         <td>  <%=rating.score %></td>
         <td>  <%= link_to rating.user,rating.user %></td>
       </tr>
  <% end %>
</tbody>
</table>
<rb>
<%= link_to 'New rating',new_rating_path, class:'btn btn-primary'%>
</rb>